# LiveKit настройки
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# Django API настройки
DJANGO_API_URL=http://localhost:8000
DJANGO_API_TOKEN=your_token_here

# Аудио настройки
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# STT настройки
STT_MODEL_SIZE=base
STT_LANGUAGE=ru

# VAD настройки
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION=0.5
VAD_MAX_SPEECH_DURATION=30.0

# NLP настройки
NLP_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
SPACY_MODEL=ru_core_news_sm

# TTS настройки
TTS_VOICE=ru_ru-oksana-medium
TTS_SPEED=1.0

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/ai_hr_bot.log
